-- table: opt_option_value
-- Данные по значениям настроечных параметров в устаревшем виде
-- ( таблица временно сохранена для совместимости, будет удалена).
create table opt_option_value  (
   option_value_id      integer                         not null,
   option_id            integer                         not null,
   datetime_value       date,
   integer_value        number(18,4),
   string_value         varchar2(4000),
   date_ins             timestamp with time zone default systimestamp not null,
   operator_id          integer                         not null,
   constraint opt_option_value_pk primary key (option_value_id)
);

create unique index opt_option_value_ux_optid_ins on opt_option_value (
   option_id asc,
   date_ins asc
);


