-- table: op_operator
-- ќператоры.

create table op_operator
(
  operator_id                     integer                             not null
  , login                         varchar2(50)                        not null
  , password                      varchar2(50)                        not null
  , date_begin                    date
  , date_finish                   date
  , operator_name                 varchar2(100)                       not null
  , operator_name_en              varchar2(100)
  , operator_id_ins               integer not null
  , date_ins                      date                default sysdate not null
  , operator_name_eng             varchar2(100)       default 'N/A'
  , operator_name_rus             varchar2(100)                       not null
  , change_password               number(1)           default 0       not null
  , constraint op_operator_pk primary key (
      operator_id
    )
    using index tablespace &indexTablespace
  , constraint op_operator_ch1 check (change_password in (0,1))
)
/
comment on column op_operator.operator_id is
  'Primary Key. »дентификатор пользовател€'
/
comment on column op_operator.login is
  'Ћогин пользовател€'
/
comment on column op_operator.password is
  '’еш парол€ пользовател€'
/
comment on column op_operator.date_begin is
  'ƒата начала действи€ записи'
/
comment on column op_operator.date_finish is
  'ƒата окончани€ действи€ записи'
/
comment on column op_operator.operator_name is
  'наименование пользовател€ на €зыке по умолчанию'
/
comment on column op_operator.operator_name_rus is
  'Ќаименование пользовател€ на €зыке по умолчанию'
/
comment on column op_operator.operator_name_en is
  'наименование пользовател€ на английском €зыке'
/
comment on column op_operator.operator_id_ins is
  'ѕользователь, создавший запись'
/
comment on column op_operator.date_ins is
  'ƒата создани€ записи'
/
comment on column op_operator.change_password is
  'ѕользователь, создавший запись'
/
comment on column op_operator.operator_name_eng is
  'Ќаименование пользовател€ на английском €зыке'
/

-- »ндекс дл€ контрол€ уникальности логина (верхний регистр)
create unique index
  op_operator_ux_upper_login
on
  op_operator (
    upper( login)
  )
tablespace
  &indexTablespace
/

-- index: op_operator_ix_name
-- »ндекс дл€ доступа по имени оператора (верхний регистр)
create index
  op_operator_ix_name
on
  op_operator (
    upper( operator_name)
  )
tablespace
  &indexTablespace
/

-- index: op_operator_ix_name_rus
create index
  op_operator_ix_name_rus
on
  op_operator(
    upper( operator_name_rus)
  )
tablespace
  &indexTablespace
/
