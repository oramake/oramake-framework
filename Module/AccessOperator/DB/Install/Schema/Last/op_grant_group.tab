--table: OP_GRANT_GROUP
-- create table OP_GRANT_GROUP
create table OP_GRANT_GROUP
(
  GROUP_ID            INTEGER not null,
  GRANT_GROUP_ID      INTEGER not null,
  CHECK_IS_GRANT_ONLY NUMBER(1) default 1 not null,
  DATE_INS            DATE default sysdate not null,
  OPERATOR_ID         INTEGER not null,
  constraint OP_GRANT_GROUP_PK primary key (GROUP_ID, GRANT_GROUP_ID)
)
/

alter table OP_GRANT_GROUP
  add constraint OP_GRANT_GROUP_CK_CHECK_IS_GRA
  check (nullif( check_is_grant_only, 1) is null);

create index OP_GRANT_GROUP_IX_GRANT_GROUP on OP_GRANT_GROUP (GRANT_GROUP_ID)
  tablespace &indexTablespace;

