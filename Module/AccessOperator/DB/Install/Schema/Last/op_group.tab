-- table: op_group
-- Группы.

create table op_group
(
  group_id                        integer                             not null
  , group_name                    varchar2(50)                        not null
  , group_name_en                 varchar2(50)                        not null
  , date_ins                      date                default sysdate not null
  , operator_id                   integer                             not null
  , is_grant_only                 number(1)           default 0       not null
  , group_name_rus                varchar2(50)                        not null
  , group_name_eng                varchar2(50)        default 'N/A'   not null
  , constraint op_group_pk        primary key
      ( group_id)
    using index tablespace
      &indexTablespace
  , constraint
      op_group_uk
    unique ( group_id, is_grant_only)
    using index tablespace
      &indexTablespace
  , constraint OP_GROUP_CK_IS_GRANT_ONLY
  check (is_grant_only in ( 0, 1))
)
/

comment on table op_group is
  'Группы [SVN root: Oracle/Module/AccessOperator]'
/
comment on column op_group.group_id is
  'Id группы'
/
comment on column op_group.group_name is
  'Наименование группы на языке по-умолчанию'
/
comment on column op_group.group_name_en is
  'Наименование группы на английском языке'
/
comment on column op_group.date_ins is
  'Дата создания записи'
/
comment on column op_group.operator_id is
  'Идентификатор оператора, создавшего запись'
/
comment on column op_group.group_name_rus is
  'Наименование группы на языке по-умолчанию'
/
comment on column op_group.group_name_eng is
  'Наименование группы на английском языке'
/

-- index: OP_GROUP_UX_GROUP_NAME
-- Индекс для доступа по названию группы (верхний регистр)
create index
  OP_GROUP_UX_GROUP_NAME
on
  op_group ( upper( group_name))
tablespace
  &indexTablespace
/

