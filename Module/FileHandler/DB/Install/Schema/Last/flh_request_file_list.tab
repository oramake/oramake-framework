-- table: flh_request_file_list
-- Результат запроса получения списка файлов
-- 
create table flh_request_file_list(
  request_file_list_id		integer,
  request_id			integer,
  operation_code	 		varchar2( 10 ) not null, 
  file_name				varchar2( 255 ) not null,
  file_size				integer not null,
  last_modification		timestamp with time zone not null,	
  constraint flh_request_file_list_pk primary key( 
    request_file_list_id
  ) using index tablespace &indexTablespace,
  constraint flh_request_file_req_oper check (
    operation_code like '%LIST%'
  ) 
)
/
comment on table flh_request_file_list is
'Результат запроса для получения списка файлов
[ Oracle/Module/FileHandler ]
'
/
-- sequence: flh_request_file_list_seq
-- Представление для генерации первичного ключа
create sequence  flh_request_file_list_seq
/
-- index: flh_req_file_list_ix_req
-- Индекс для доступа по request_id
create index flh_req_file_list_ix_req on flh_request_file_list(
  request_id
  , operation_code	
)
tablespace &indexTablespace
/
  
