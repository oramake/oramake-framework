prompt * creating table dsz_segment...

-- table: dsz_segment
-- Данные по сегментам ( на основе dba_segments )
create table dsz_segment(
  segment_id 			integer not null,
  header_id			      integer not null,
  owner           		varchar2(30),
  segment_name    		varchar2(81),
  partition_name  		varchar2(30),
  segment_type    		varchar2(18),
  tablespace_name 		varchar2(30),
  header_file     		number,
  header_block    		number,
  bytes           		number,
  blocks          		number,
  extents         		number,
  initial_extent  		number,
  next_extent     		number,
  min_extents     		number,
  max_extents     		number,
  pct_increase    		number,
  freelists       		number,
  freelist_groups 		number,
  relative_fno    		number,
  buffer_pool     		varchar2(7),
  date_ins				date default sysdate not null,
  constraint dsz_segment_pk primary key( 
    segment_id
  )
  using index tablespace &indexTablespace   
)
/
-- index: dsz_segment_ix_header
-- Индекс для доступа по заголовку
create index dsz_segment_ix_header on dsz_segment(
  header_id
  , owner 
  , segment_name
  , tablespace_name
  , partition_name
  , segment_type
)
tablespace &indexTablespace
