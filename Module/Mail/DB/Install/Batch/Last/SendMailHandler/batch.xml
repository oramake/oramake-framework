<?xml version="1.0" encoding="Windows-1251"?>
<batch short_name="SendMailHandler">
  <name>Обработчик отправки почтовых сообщений</name>
  <batch_config>
    <retry_count>60</retry_count>
    <retry_interval>1</retry_interval>
    <schedule>
      <name>немедленно</name>
    </schedule>
    <option short_name="MaxMessageCount" type="number" name="Количество отправляемых сообщений">
      <value>500</value>
    </option>
    <option short_name="SmtpServerList" type="string"
      name="Список имен ( ip-адресов) SMTP-серверов ( разделить &quot;,&quot;)"
      description="Если значение не задано, то используется SMTP-сервер из настроек модуля, а при его отсутствии SMTP-сервер, возвращаемый функцией pkg_Common.getSmtpServer модуля Common"
      >
      <value></value>
    </option>
    <option short_name="Username" type="string" name="Имя пользователя для авторизации на SMTP-сервере">
      <prod_value></prod_value>
      <test_value></test_value>
    </option>
    <option short_name="Password" type="string" name="Пароль для авторизации на SMTP-сервере" encryption="1">
      <prod_value></prod_value>
      <test_value></test_value>
    </option>
  </batch_config>
  <content id="1" job="initialization" module="Scheduler"/>
  <content id="2" job="send_mail_handler" module="Mail">
    <condition id="1">true</condition>
  </content>
  <content id="3" job="retry_batch" module="Scheduler">
    <condition id="2">skip</condition>
    <condition id="2">error</condition>
  </content>
</batch>
