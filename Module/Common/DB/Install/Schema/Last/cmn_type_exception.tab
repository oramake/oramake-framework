-- table: cmn_type_exception
-- Типы исключений

create table cmn_type_exception 
(
  type_exception_code varchar2(10) not null
  , type_exception_name_rus varchar2(50) not null
  , type_exception_name_eng varchar2(50) not null
  , date_ins date default sysdate not null
  , operator_id integer not null
  , constraint cmn_type_exception_pk primary key
      ( type_exception_code )
    using index tablespace
      &indexTablespace
)
/

comment on table cmn_type_exception is
  'Типы исключений [SVN root: Oracle/Module/Common]'
/
comment on column cmn_type_exception.type_exception_code is
  'Код типа исключения'
/
comment on column cmn_type_exception.type_exception_name_rus is
  'Название типа исключения (рус.)'
/
comment on column cmn_type_exception.type_exception_name_eng is
  'Название типа исключения (англ.)'
/
comment on column cmn_type_exception.date_ins is
  'Дата добавления записи'
/
comment on column cmn_type_exception.operator_id is
  'Идентификатор оператора, добавившего запись'
/