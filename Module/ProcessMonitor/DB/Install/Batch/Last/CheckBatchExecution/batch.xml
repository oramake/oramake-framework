<?xml version="1.0" encoding="Windows-1251"?>
<batch short_name="CheckBatchExecution">
  <batch_config>
    <retry_count>1</retry_count>
    <retry_interval>15</retry_interval>
    <schedule>
      <name>every hour at 5 and 35 minute</name>
      <interval type="mi">
        <value>5</value>
      </interval>
      <interval type="mi">
        <value>35</value>
      </interval>
    </schedule>
    <option short_name="WarningTimeHour" type="number" name="ѕорог предупреждени€ по времени выполнени€ пакета (в часах)">
      <value>15</value>
    </option>
    <option short_name="WarningTimePercent" type="number" name="ѕорог предупреждени€ по превышению максимального времени выполнени€ пакета (в процентах)">
      <value>130</value>
    </option>
    <option short_name="AbortTimeHour" type="number" name="ѕорог прерывани€ выполнени€ пакета (в часах)">
      <value>20</value>
    </option>
    <option short_name="MinWarningTimeHour" type="number" name="ћинимальный порог предупреждени€ по времени выполнени€ пакета (в часах)">
      <value>3</value>
    </option>
    <option short_name="OrakillTimeHour" type="number" name="ѕорог прерывани€ выполнени€ пакета через OraKill (в часах)">
      <value>12</value>
    </option>
    <option short_name="HandlerWarningTimeHour" type="number" name="ѕорог предупреждени€ дл€ обработчиков (в часах)">
      <value>25</value>
    </option>
    <option short_name="HandlerAbortTimeHour" type="number" name="ѕорог прерывани€ дл€ обработчиков (в часах)">
      <value></value>
    </option>
    <option short_name="HandlerOrakillTimeHour" type="number" name="ѕорог прерывани€ дл€ обработчиков (в часах)">
      <value></value>
    </option>
  </batch_config>
  <name>ѕроверка длительности выполнени€ пакетов</name>
  <content id="1" job="initialization" module="Scheduler"/>
  <content id="2" job="check_batch_execution">
    <condition id="1">true</condition>
  </content>
  <content id="3" job="retry_batch" module="Scheduler">
    <condition id="2">error</condition>
    <condition id="2">skip</condition>
    <condition id="2">run_error</condition>
  </content>
</batch>
